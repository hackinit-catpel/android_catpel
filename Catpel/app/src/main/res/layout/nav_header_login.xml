<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/nav_header"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@mipmap/avatar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/user_name_display"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:text="sssss"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView

        android:textSize="18dp"
        android:layout_marginLeft="20dp"
        android:text="dddd"
        android:layout_marginTop="110dp"
        android:id="@+id/user_mimutes_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/user_pet_status_display"
        android:layout_marginTop="90dp"
        android:background="@drawable/pet_shape"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="30dp"
        android:layout_toEndOf="@+id/user_avatar"
        android:layout_toRightOf="@+id/user_avatar" />

    <TextView
        android:textColor="@color/colorWhite"
        android:textSize="18dp"
        android:text="启动相应的App"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_mimutes_display" />
</RelativeLayout>
